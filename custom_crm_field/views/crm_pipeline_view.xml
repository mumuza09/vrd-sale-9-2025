        <record id="crm_stage_company_rule" model="ir.rule">
            <field name="name">Limit CRM Stages by Company</field>
            <field name="model_id" ref="crm.model_crm_stage"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', user.company_ids.ids or [user.company_id.id, False])]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>



    </data>
</odoo>
<odoo>
    <record id="crm_page_tree_view" model="ir.ui.view">
        <field name="name">crm.page.tree.view</field>
        <field name="model">crm.page</field>
        <field name="arch" type="xml">
            <list string="Pages" editable="bottom" sample="1">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="crm_page_action" model="ir.actions.act_window">
        <field name="name">Pages</field>
        <field name="res_model">crm.page</field>
    </record>

    <menuitem id="menu_crm_page"
        name="Pages"
        parent="crm.crm_menu_config" 
        action="crm_page_action"/>
</odoo>
